package VidhinSanAssign;
// hollow dimaond pattern
public class Pattern2 {

	public static void main(String[] args) {
	int n =5,j;
		for(int i=0;i<n;i++)
		{
			for( j=i;j<n;j++)
			{
				System.out.print("`");
			}
			for(int k=1;k<=i;k++)
			{
				if(k==1||k==i)
				{
					System.out.print("*");
				}
				else
					System.out.print(" ");
			}
			
			System.out.println();
		}
		
	}

}
