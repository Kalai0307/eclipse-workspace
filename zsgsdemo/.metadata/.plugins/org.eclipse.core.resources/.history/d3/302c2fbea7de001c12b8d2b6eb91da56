import java.util.Scanner;

public class BusApplication {

	public static void main(String[] args) {
		Scanner sc = new Scanner(System.in);
		Bus bus =new Bus();
		Passenger passenger = new Passenger();
		System.out.println("Press 1: To know the Bus and Driver details");
		
		while(true)
		{
			byte choice = sc.nextByte();
			System.out.println("enter choice :"+choice);
			switch(choice)
			{
			case 1:
			{
				busDetails(bus);
				break;
			}
			case 2:
			{
				passengerDetail(passenger);
				break;
			}
		}
		
		}
		
				
		
		
		

	}

	private static void passengerDetail(Passenger passenger) {
		Scanner sc = new Scanner(System.in);
		System.out.println("enter your name :");
		passenger.setName(sc.next());
		System.out.println("enter your age");
		passenger.setAge(sc.nextInt());
		System.out.println("enter your gender");
		String gender=sc.next();
		passenger.genderIsPresent(gender);
		System.out.println(gender);
		
		
	}

	private static void busDetails(Bus bus) {
		bus.setBusId("TK004");
		bus.setBusType("Semi-Sleeper");
		bus.setSeatCount(5);
		bus.setDriverName("SAI SABARI JEYANTH");
		bus.setPhno(9488034538l);
		System.out.println(bus.toString());
		
		
	}

}
